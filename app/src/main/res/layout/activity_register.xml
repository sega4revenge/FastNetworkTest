<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_register_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_input">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/layout_singup"
        android:layout_alignLeft="@+id/layout_singup"
        android:layout_alignRight="@+id/layout_singup"
        android:layout_alignStart="@+id/layout_singup"
        android:layout_above="@id/layout_singup"
        android:layout_marginBottom="53dp"
        android:orientation="vertical">



            <android.support.design.widget.TextInputEditText

                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/account"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/account"
                android:ems="10"
                android:hint="@string/hint_name"
                android:inputType="textAutoComplete"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:textSize="14sp"
                android:background="@drawable/roundeditttext"

                />


        <android.support.design.widget.TextInputEditText

            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/account"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/account"
            android:ems="10"
            android:hint="@string/txt_phone"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="14sp"
            android:background="@drawable/roundeditttext"

            />


            <android.support.design.widget.TextInputEditText

                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/account"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/account"
                android:ems="10"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:textSize="14sp"
                android:background="@drawable/roundeditttext"

                />




            <android.support.design.widget.TextInputEditText

                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/lock"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/lock"
                android:ems="10"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:textSize="14sp"
                android:background="@drawable/roundeditttext"

                />



            <android.support.design.widget.TextInputEditText

                android:id="@+id/repassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/lock"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/lock"
                android:ems="10"
                android:hint="@string/hint_repassword"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:textSize="14sp"
                android:background="@drawable/roundeditttext"

                />



        <android.support.design.widget.TextInputEditText

            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/lock"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="14sp"
            android:background="@drawable/roundeditttext"

            />

            <android.support.design.widget.TextInputEditText

                android:id="@+id/input_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/lock"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/lock"
                android:ems="10"
                android:hint="Code"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:textSize="14sp"
                android:background="@drawable/roundeditttext"

                />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dist_large"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginRight="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_above="@+id/btn_backtologin"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size_large"

            android:background="@drawable/roundbutton"
            android:text="@string/btn_join"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size_large"
            android:visibility="gone"
            android:background="@drawable/roundbutton"
            android:text="Phone"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size_large"
            android:visibility="gone"
            android:background="@drawable/roundbutton"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </FrameLayout>




    <Button
        android:id="@+id/btn_backtologin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size_large"
        android:background="@color/transparent"
        android:text="@string/btn_backtologin"
        android:textAllCaps="false"
        android:textColor="@color/btn_color_login"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>