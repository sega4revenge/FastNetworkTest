<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:background="@drawable/radius_all_view"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/layout_view"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="My Awesome Movie Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_productname"
         />

    <ImageView
        android:id="@+id/btn_save"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_unchecked"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/product_info"
        android:layout_alignEnd="@+id/product_info" />
    <!-- Title -->


    <LinearLayout
        android:id="@+id/layout_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_user_address"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="70dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundtextview"
            android:text="lượt xem"
         />
    </LinearLayout>

 <!--   <ImageView
        android:id="@+id/product_category"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_view"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/cate_electronic" />-->


    <!-- Release date and runtime -->


    <!-- Rating Area -->
    <TextView
        android:id="@+id/product_user_address"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/product_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#737373"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:text="My movie overview goes here" />
    <View
        android:id="@+id/line_1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/layout_view"
        android:layout_height="0.5dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_toLeftOf="@id/tv_text"
        android:layout_toStartOf="@id/tv_text"
        android:background="@color/btn_color_login" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_info"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line_1"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cate_vehicle" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="500.000 VND"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cate_electronic" />

            <TextView
                android:id="@+id/product_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:minLines="2"

                android:text="1 giờ"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/product_category"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:minLines="2"
                android:maxLines="2"

                android:text="Thời trang,đồ dùng cá nhân"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/cate_fashion" />

            <TextView
                android:id="@+id/product_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:minLines="2"
                android:maxLines="2"
                android:text="Thời trang,đồ dùng cá nhân"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/product_info"
        android:layout_height="0.5dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_toLeftOf="@id/tv_text"
        android:layout_toStartOf="@id/tv_text"
        android:background="@color/btn_color_login" />

    <TextView
        android:id="@+id/product_overview"
        android:gravity="center_horizontal"
        android:layout_below="@+id/line_2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:textColor="#737373"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="My movie overview goes here"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
    <View
        android:id="@+id/line_3"
        android:layout_width="wrap_content"
        android:layout_below="@+id/product_overview"
        android:layout_height="0.5dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_toLeftOf="@id/tv_text"
        android:layout_toStartOf="@id/tv_text"
        android:background="@color/btn_color_login" />
    <RelativeLayout
        android:id="@+id/layout_detail_user"
        android:layout_width="match_parent"
        android:layout_below="@+id/line_3"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <sega.fastnetwork.test.customview.CircleImageView
            android:id="@+id/productdetail_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo" />

        <ImageButton
            android:id="@+id/productdetail_btn_userdetail"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:src="@mipmap/ic_detail_user"
            android:tint="@color/color_background_button" />

        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/productdetail_btn_userdetail"
            android:layout_toRightOf="@id/productdetail_avatar"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/product_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#aaaaaa" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

