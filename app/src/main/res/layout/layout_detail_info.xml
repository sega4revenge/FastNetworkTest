<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:background="@drawable/radius_all_view"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/layout_view"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="My Awesome Movie Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_productname"
         />

    <!-- Title -->


    <LinearLayout
        android:id="@+id/layout_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        >


        <TextView
            android:id="@+id/product_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="70dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/roundtextview"
            android:text="lượt xem"
         />
    </LinearLayout>

 <!--   <ImageView
        android:id="@+id/product_category"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_view"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/cate_electronic" />-->


    <!-- Release date and runtime -->


    <!-- Rating Area -->
    <TextView
        android:id="@+id/product_user_address"
        style="@style/ProductItemValueStyle"
        android:layout_below="@+id/product_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#737373"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="My movie overview goes here" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_info"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/product_user_address"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/icon_price" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minLines="2"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="500.000 VND"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/icon_time" />

            <TextView
                android:id="@+id/product_rentime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:minLines="2"

                android:text="1 giờ"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/product_category"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:minLines="2"
                android:maxLines="2"

                android:text="Thời trang,đồ dùng cá nhân"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/icon_view" />

            <TextView
                android:id="@+id/product_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:minLines="2"
                android:maxLines="2"
                android:text="Thời trang,đồ dùng cá nhân"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/product_info"
        android:layout_height="0.5dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_toLeftOf="@id/tv_text"
        android:layout_toStartOf="@id/tv_text"
        android:background="@color/btn_color_login" />

    <TextView
        android:id="@+id/product_overview"
        style="@style/ProductItemValueStyle"
        android:layout_below="@+id/product_info"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#737373"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="My movie overview goes here" />
</RelativeLayout>

