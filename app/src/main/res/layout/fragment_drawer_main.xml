                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="13dp"
                            android:background="#37474F"
                            android:src="@mipmap/ic_add_product" />

                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>

