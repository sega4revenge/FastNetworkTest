                                        android:text="@string/cate_furniture"
                                        android:textColor="@color/black"
                                        android:minLines="2"
                                        android:textSize="13dp" />
                                    </LinearLayout>
                                    <include
                                        android:id="@+id/selected_6"
                                        layout="@layout/layout_selected" />
                                </RelativeLayout>

