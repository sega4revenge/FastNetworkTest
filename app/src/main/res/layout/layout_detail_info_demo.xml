<?xml version="1.0" encoding="utf-8"?>
<sega.fastnetwork.test.lib.ShimmerRecycleView.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/black"
        android:alpha="0.1"
        android:background="@color/shimmer_background_color"
        android:textStyle="bold"
        android:textSize="@dimen/text_productname"
        android:layout_alignLeft="@+id/product_user_address"
        android:layout_alignStart="@+id/product_user_address"
        android:layout_alignEnd="@+id/btn_save"
        android:layout_alignRight="@+id/btn_save"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/btn_save"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:alpha="0.1"
        android:background="@color/shimmer_background_color"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/product_info"
        android:layout_alignEnd="@+id/product_info" />
    <!-- Title -->


    <LinearLayout
        android:id="@+id/layout_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_user_address"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:minWidth="50dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="20dp"
            android:alpha="0.1"
            android:background="@color/shimmer_background_color"
            />
    </LinearLayout>

    <!--   <ImageView
           android:id="@+id/product_category"
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_alignParentRight="true"
           android:layout_below="@id/layout_view"
           android:layout_marginRight="20dp"
           android:layout_marginTop="5dp"
           android:src="@drawable/cate_electronic" />-->


    <!-- Release date and runtime -->


    <!-- Rating Area -->
    <TextView
        android:id="@+id/product_user_address"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/product_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:alpha="0.1"
        android:background="@color/shimmer_background_color"
        android:textSize="13sp"
        android:textStyle="normal"
       />

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:alpha="0.1"
        android:background="@color/shimmer_background_color"
        android:orientation="horizontal"
        android:layout_below="@+id/product_user_address">

    </LinearLayout>
    <View
        android:id="@+id/line_1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/layout_view"
        android:layout_height="0.5dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_toLeftOf="@id/tv_text"
        android:layout_toStartOf="@id/tv_text"
        android:background="@color/btn_color_login" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_info"
        android:layout_below="@+id/line_1"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:id="@+id/price_and_bagde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img_bagde"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:maxLines="2"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:background="@color/shimmer_background_color"
                android:alpha="0.1"
                android:textSize="12sp"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color" />

            <TextView
                android:id="@+id/product_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxLines="2"
                android:minLines="2"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/product_category"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color" />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxLines="2"
                android:minLines="2"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color" />

            <TextView
                android:id="@+id/product_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxLines="2"
                android:minLines="2"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/product_info"
        android:layout_height="0.5dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_toLeftOf="@id/tv_text"
        android:layout_toStartOf="@id/tv_text"
        android:background="@color/btn_color_login" />

    <TextView
        android:id="@+id/product_overview"
        android:gravity="center_horizontal"
        android:layout_below="@+id/line_2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#737373"
        android:textSize="14sp"
        android:textStyle="normal"
        android:alpha="0.1"
        android:background="@color/shimmer_background_color"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/layout_share_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/product_overview"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/layout_favorite"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/img_save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color" />

            <TextView
                android:id="@+id/txt_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:minLines="2"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_share"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_4"
        android:layout_width="wrap_content"
        android:layout_below="@+id/layout_share_favorite"
        android:layout_height="0.5dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_toLeftOf="@id/tv_text"
        android:layout_toStartOf="@id/tv_text"
        android:background="@color/btn_color_login" />
    <RelativeLayout
        android:id="@+id/layout_detail_user"
        android:layout_width="match_parent"
        android:layout_below="@+id/line_4"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <sega.fastnetwork.test.customview.CircleImageView
            android:id="@+id/productdetail_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.1"
            android:background="@color/shimmer_background_color" />

        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/productdetail_avatar"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/product_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/product_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:layout_marginTop="2dp"
                android:textColor="#aaaaaa" />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/layout_detail_user"
        android:weightSum="100">
        <LinearLayout
            android:id="@+id/layout_call"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="33.33"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/imageView8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_sms"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="33.33"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_chat"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="33.33"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:alpha="0.1"
                android:background="@color/shimmer_background_color"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</sega.fastnetwork.test.lib.ShimmerRecycleView.ShimmerLayout>