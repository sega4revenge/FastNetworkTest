<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comments_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"

   >

    <!-- Cast Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="5dp">
        <ImageButton
            android:id="@+id/refresh_comment"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/refresh"/>
    </LinearLayout>

    <sega.fastnetwork.test.view.RobotoBoldTextView
        android:id="@+id/no_cmt"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No comment"
        android:visibility="gone">

    </sega.fastnetwork.test.view.RobotoBoldTextView>
    <!-- Cast Item 1 -->
    <LinearLayout
        android:id="@+id/comment_item1"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        style="@style/ProductCastHolderStyle">
        <!-- Image -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dist_medium">

            <sega.fastnetwork.test.customview.CircleImageView
                android:id="@+id/userimage1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/product_compact_text_margin"
                android:layout_marginStart="@dimen/product_compact_text_margin"
                android:layout_toEndOf="@+id/userimage1"
                android:layout_toRightOf="@+id/userimage1"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <sega.fastnetwork.test.view.RobotoRegularTextView
                    android:id="@+id/usercomments1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large"
                    tools:text="My Awesome product Title" />

                <sega.fastnetwork.test.view.RobotoRegularTextView
                    android:id="@+id/comments1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    tools:text="2016" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_elevation"
                    android:orientation="horizontal">

                    <sega.fastnetwork.test.view.RobotoRegularTextView
                        android:id="@+id/user_rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="8.76"
                        android:textColor="@color/input_register"
                        android:textSize="@dimen/text_medium" />



                    <sega.fastnetwork.test.view.RobotoRegularTextView
                        android:id="@+id/datecomment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginEnd="@dimen/dist_small"
                        android:layout_marginRight="@dimen/dist_small"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="June 22 2016"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Cast Item 2 -->
    <LinearLayout
        android:id="@+id/comment_item2"
        style="@style/ProductCastHolderStyle"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <RelativeLayout
