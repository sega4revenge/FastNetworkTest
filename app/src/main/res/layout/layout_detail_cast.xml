                    android:textSize="@dimen/text_large"
                    tools:text="My Awesome product Title" />

                <sega.fastnetwork.test.view.RobotoRegularTextView
                    android:id="@+id/comments2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_medium"
                    tools:text="2016" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_elevation"
                    android:orientation="horizontal">

                    <sega.fastnetwork.test.view.RobotoRegularTextView
                        android:id="@+id/user_rating2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="8.76"
                        android:textColor="@color/input_register"
                        android:textSize="@dimen/text_medium" />



                    <sega.fastnetwork.test.view.RobotoRegularTextView
                        android:id="@+id/datecomment2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginEnd="@dimen/dist_small"
                        android:layout_marginRight="@dimen/dist_small"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="June 22 2016"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Cast Item 3 -->
    <LinearLayout
        android:id="@+id/comment_item3"
        style="@style/ProductCastHolderStyle"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
        <!-- Image -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dist_medium">

            <sega.fastnetwork.test.customview.CircleImageView
