            <sega.fastnetwork.test.customview.CircleImageView
                android:id="@+id/userimage2"
                android:layout_width="45dp"

                android:layout_height="45dp"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/product_compact_text_margin"
                android:layout_marginStart="@dimen/product_compact_text_margin"

                android:layout_toEndOf="@+id/userimage2"
