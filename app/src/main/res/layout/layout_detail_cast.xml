<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comments_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="vertical"

   >

    <!-- Cast Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Bình luận sản phẩm"
            android:layout_marginLeft="8dp"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/refresh_comment"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/refresh"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/no_cmt"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="No comment"
        android:visibility="gone">

    </TextView>
    <!-- Cast Item 1 -->
    <LinearLayout
        android:id="@+id/comment_item1"
        style="@style/ProductCastHolderStyle"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
        <!-- Image -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dist_medium">

            <sega.fastnetwork.test.customview.CircleImageView
                android:id="@+id/userimage1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/product_compact_text_margin"
                android:layout_marginStart="@dimen/product_compact_text_margin"
                android:layout_toEndOf="@+id/userimage1"
                android:layout_toRightOf="@+id/userimage1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/usercomments1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        tools:text="My Awesome product Title 1"
                        android:layout_toLeftOf="@id/txt_num_like"/>
                    <TextView
                        android:id="@+id/txt_num_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@id/img_like"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:id="@+id/img_like"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_like"/>

                </RelativeLayout>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_elevation"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/datecomment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        tools:text="Nov 20, 6:20 AM" />
                    <TextView
                        android:id="@+id/email_comment1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        tools:text="Ho Hoang Linhh"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/comments1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="7dp"
            android:paddingLeft="69dp"
            android:textColor="@color/black"

            tools:text="My Awesome product Title 1" />

    </LinearLayout>

