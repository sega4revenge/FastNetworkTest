                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                app:hint="Nhập tối đa 5 tên thành phố"
                app:hintColor="@color/background"
                app:maxHeight="20dp"
                app:maxRows="3" />

            <View
