<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/txt_changeacc"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter new name"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/edt_newname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_radius"
        android:paddingLeft="15dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Enter new phone number"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:id="@+id/edt_newphone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/shimmer_color"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_radius"
        android:paddingLeft="15dp"
        android:enabled="false"
        android:gravity="center"
        />
