<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_forgotpw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_register_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_input">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_singup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginEnd="@dimen/dist_large"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginRight="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_marginBottom="43dp"
        android:orientation="vertical">

            <android.support.design.widget.TextInputEditText

                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="@string/txt_phonenumber"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:textSize="15sp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textColorLink="@color/btn_color_login"
                android:background="@drawable/roundeditttext"

                />

        <android.support.design.widget.TextInputEditText

            android:id="@+id/forgot_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundeditttext"
            android:ems="10"
            android:hint="Code"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:paddingLeft="25dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textColorLink="@color/btn_color_login"
            android:textSize="15sp"

            />

        <android.support.design.widget.TextInputEditText

                android:id="@+id/forgot_newpw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"

                android:ems="10"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingLeft="25dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
                android:textColorLink="@color/btn_color_login"
                android:textSize="15sp"
                android:background="@drawable/roundeditttext"

                />

            <android.support.design.widget.TextInputEditText

                android:id="@+id/forgot_repassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="@string/hint_repassword"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingLeft="25dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textColorLink="@color/btn_color_login"
                android:textSize="15sp"
                android:background="@drawable/roundeditttext"

                />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dist_large"
        android:layout_marginLeft="@dimen/dist_large"
        android:layout_marginRight="@dimen/dist_large"
        android:layout_marginStart="@dimen/dist_large"
        android:layout_above="@+id/forgot_btn_backtologin"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/forgot_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/forgot_action_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size_large"
            android:background="@drawable/roundbutton"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/forgot_action_newpw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_size_large"
            android:background="@drawable/roundbutton"
            android:text="@string/btn_ok"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </FrameLayout>




    <Button
        android:id="@+id/forgot_btn_backtologin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size_large"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:text="@string/btn_backtologin"
        android:textAllCaps="false"
        android:textColor="@color/btn_color_login" />
</RelativeLayout>
