<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="2dp"
    android:orientation="horizontal"
    android:gravity="left|center"
    android:weightSum="100">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/bottomchat"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:id="@+id/upimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/add_push"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_alignBottom="@+id/editTextMessage"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editTextMessage"
            android:background="@color/white"
            android:layout_toStartOf="@+id/buttonMessage"
            android:layout_toLeftOf="@+id/buttonMessage"
            android:layout_toRightOf="@+id/upimage"
            android:layout_toEndOf="@+id/upimage"
            android:layout_margin="5dp"
            android:hint="@string/txt_inputmess"
            />
        <ImageView
            android:id="@+id/buttonMessage"
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_alignBottom="@+id/editTextMessage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</LinearLayout>

