<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_changepassword"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context="sega.fastnetwork.test.activity.ChangePasswordActivity">
    <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_changepass"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbar"
                android:theme="@style/Theme.Samita.Toolbar"
                android:layout_centerVertical="true"
                >
            </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_oldpass"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"/>


        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/btn_color_login"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_newpass"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>

        <android.support.design.widget.TextInputEditText

            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/btn_color_login"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="15dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_confirm_newpass"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"/>


        <android.support.design.widget.TextInputEditText

            android:id="@+id/confirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/btn_color_login"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="15dp"

            />

        <FrameLayout
            android:id="@+id/layout_singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="@dimen/dist_large"
            android:layout_marginLeft="@dimen/dist_large"
            android:layout_marginRight="@dimen/dist_large"
            android:layout_marginStart="@dimen/dist_large"
            android:layout_above="@+id/btn_backtologin"
            android:layout_centerHorizontal="true">

            <ProgressBar
                android:id="@+id/progressBar_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size_large"
                android:background="@drawable/roundbutton"
                android:text="@string/btn_change"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </FrameLayout>
    </LinearLayout>


</LinearLayout>
